{
    "name": "multidanze/phalcon-mailer",
    "description": "Phalcon Mailer Module.",
    "type": "library",
    "keywords" : [
        "phalcon",
        "phalcon mailer"
    ],
    "support": {
        "issues": "https://github.com/multidanze/phalcon-mailer/issues"
    },
    "minimum-stability": "stable",
    "homepage" : "https://github.com/multidanze/phalcon-mailer",
    "license" : "MIT",
    "authors" : [{
        "name": "multidanze",
        "email": "multidanze@gmail.com",
        "homepage": "http://easydot.gr",
        "role": "Developer"
    }],

    "autoload": {
        "psr-4": {
            "Multidanze\\Mailer\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },

    "require": {
        "php": ">=5.4.0",
        "swiftmailer/swiftmailer": "~5.3",
        "jeremeamia/superclosure": "~1.0.1"
    },
    "require-dev": {
        "phalcon/devtools": "~2.0"
    },

    "extra": {
        "branch-alias": {
            "dev-master": "1.*-dev"
        }
    }
}